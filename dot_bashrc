function bluemic() {
    pactl set-card-profile $(pactl list cards short | grep bluez |  awk '{ print $1 }') headset-head-unit
}

function bluesound() {
    pactl set-card-profile $(pactl list cards short | grep bluez |  awk '{ print $1 }') a2dp-sink
}

