function cb() {
  if command -v pbcopy &> /dev/null
  then
    pbcopy
  elif command -v xclip &> /dev/null
  then
    xclip -sel clip
  fi
}

function nix-user-rebuild() {
  nix-env --file ~/default.nix --install --remove-all
}

